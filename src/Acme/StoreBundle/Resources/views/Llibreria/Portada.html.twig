{% extends 'AcmeStoreBundle::layoutFrontend.html.twig' %}

{% block title %}Llibreria 22@{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

    <h1 class="title"></h1>
    
    	
    	<div class="leftdiv">
    		{% if portada|length >0 %}
	    		<ul>	    			
	    		{% for port in portada %}
	    			<li>{{ port.titol}} <img  width="300px" src="{{path}}{{ port.tablePath}}/{{ port.attachment}}" /></li> 
	    		{% endfor %}
	    		</ul>
	    	{% else %}
	    	 <p>- There are no things </p>
	    	{% endif %}
    	</div>
        {% if app.environment == 'dev' %}
           DEV
        {% endif %}
       <script>
       			$('li').removeClass('active');
		    	$('#portadali').addClass('active');
       </script>
{% endblock %}
