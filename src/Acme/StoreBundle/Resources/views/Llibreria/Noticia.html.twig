{% extends 'AcmeStoreBundle::layoutFrontend.html.twig' %}

{% block title %}Llibreria 22@{% endblock %}

{% block content_header '' %}
{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

		<div class="contentnota">
			<div class="tit_fixN">
				{% trans %}f_noticia_title{% endtrans %}
			</div>
		</div>
		<div class="contentnot">
			
			<div id="co" class="js-masonry">
			{% if pagination|length >0 %}
				{% for noticia in pagination %}
					
					<div class="not_el item">
					<div class="not_int">
						<span class="tit_not">
							{{ noticia.titol}}
						</span><br>
						<span class="sub_tit">
							{{ noticia.subtitol}}
						</span><br>
					
							{{noticia.description|raw}}						
						
						<img id="img_{{ noticia.id}}" src="{{path}}{{ noticia.attachment}}" />
						<div class="not_fet">
							{% trans %}f_publicat_el{% endtrans %}{{ noticia.dataEntrada|date('Y F jS')}}
						</div>
					
					</div>
					</div>
					
				{% endfor %}
			</div>
			
			<div class="pagerfanta" >
	    			{{knp_pagination_render(pagination)}}
	    		</div>
		</div>
	    		
		    	{% else %}
		    		 <p>{% trans %}f_no_things{% endtrans %}</p>
		    	{% endif %}
		    	<script>
		    		  $('li').removeClass('active');
		    		  $('#noticiali').addClass('active');     
				
				var $container = $('#co');
				// initialize
				$container.masonry({
				 columnWidth: 200,
				 gutter: '.grid-sizer',
				 gutter: 10,
				itemSelector: '.item'
				});
		    	</script>
			
		
{% endblock %}
