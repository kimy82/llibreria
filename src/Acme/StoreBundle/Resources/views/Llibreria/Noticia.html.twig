{% extends 'AcmeStoreBundle::layoutFrontend.html.twig' %}

{% block title %}Llibreria 22@{% endblock %}

{% block content_header '' %}
{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

		<div class="contentnota">
			<div class="tit_fixN">
				{% trans %}f_noticia_title{% endtrans %}
			</div>
		</div>
		<div class="contentnot">
			<div id="co" data-masonry-options='{ "columnWidth": 10, "itemSelector": ".item" }'>
			{% if pagination|length >0 %}
				{% for noticia in pagination %}
					
					<div class="not_el item">
					<div class="not_int">
						<span class="tit_not">
							{{ noticia.titol}}
						</span><br>
						<span class="sub_tit">
							{{ noticia.subtitol}}
						</span><br>
						<label id="not_desc_{{noticia.id}}">
							{{noticia.description}}
						</label>
						<script>
							var text = $("#not_desc_{{noticia.id}}").text();
							$("#not_desc_{{noticia.id}}").html(text);
						</script>
						<img id="img_{{ noticia.id}}" src="{{path}}{{ noticia.attachment}}" width="100px" />
						<div class="not_fet">
							{% trans %}f_publicat_el{% endtrans %}{{ noticia.dataEntrada|date('Y F jS')}}
						</div>
					
					</div>
					</div>
					
				{% endfor %}
			</div>
		</div>
	    		<div class="pagerfanta" >
	    			{{knp_pagination_render(pagination)}}
	    		</div>
		    	{% else %}
		    		 <p>{% trans %}f_no_things{% endtrans %}</p>
		    	{% endif %}
		    	<script>
		    		  $('li').removeClass('active');
		    		  $('#noticiali').addClass('active');     
				
				$(document).ready(function(){
					
					$('#co').addClass('js-masonry');
					});
		    	</script>
			
		
{% endblock %}
