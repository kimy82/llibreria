                                                                                            var imgWidth = $(".buscador").width();
                                                                                            var imgheight = $(".buscador").height();
                                                                                            
                                                                                            if (imgheight<imgWidth) {
                                                                                             $('.buscador').addClass('coco');
                                                                                             
                                                                                            } else{
                                                                                               $('.buscador').addClass('nitro');
                                                                                            }
                                                                                       </script>
                                                                                        </th>
											</tr>
											</table>
									        {% endif %}
											<div>
											<div class="titol">
												{{ llibre.name}}
											</div>
