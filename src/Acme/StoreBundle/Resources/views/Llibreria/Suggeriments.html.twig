												<p>{{ llibre.description}}</p>
											</div>											
											</div>
										</div>
                                                                               
									{% endfor %}
							
								{% else %}
						    		 <p>{% trans %}f_no_things{% endtrans %}</p>
								{% endif %}
							
							
						</div>
					</div>
			        <div class="contente-2">
