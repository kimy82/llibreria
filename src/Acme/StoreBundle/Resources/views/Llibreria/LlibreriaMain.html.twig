{% extends 'AcmeStoreBundle::layoutFrontend.html.twig' %}

{% block title %}Llibreria 22@{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

    <h1 class="title"></h1>
    
    	{% for locale in ['en', 'fr', 'es'] %}
		    <li {% if locale == app.request.locale %}class="active"{% endif %}>
		        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : locale})) }}">{{ locale }}</a>
		    </li>
		{% endfor %}
		
    	<div class="leftdiv">
    		{% if portada|length >0 %}
	    		<ul>	    			
	    		{% for port in portada %}
	    			<li>{{ port.titol}} <img  width="300px" src="{{path}}{{ port.tablePath}}/{{ port.attachment}}" /></li> 
	    		{% endfor %}
	    		</ul>
	    	{% else %}
	    	 <p>- There are no things </p>
	    	{% endif %}
    	</div>
    	<div class="rightdiv">
    	   {% if paginationPresentacio|length >0 %}
	    		<ul>	    			
	    		{% for presentacio in paginationPresentacio %}
	    			<li>{{ presentacio.titol}} {{ presentacio.subtitol}}  {{ presentacio.description}} {{ presentacio.novetat}} {{ presentacio.portada}}  {{ presentacio.intervindran}}  {{ presentacio.lloc}} {{ presentacio.dataFi|date('Y-m-d')}} {{ presentacio.dataEntrada|date('Y-m-d')}} <img width="200px" src="{{path}}presentacio/{{ presentacio.attachment}}" /></li> 
	    		{% endfor %}
	    		</ul>
	    		<div class="pagerfanta" >
	    			{{knp_pagination_render(paginationPresentacio)}}
	    		</div>
	    	{% else %}
	    	 <p>- There are no things </p>
	    	{% endif %}
    	</div>
        {% if app.environment == 'dev' %}
           DEV
        {% endif %}
       
{% endblock %}
