            <li {% if locale == app.request.locale %}class="active"{% endif %}>
                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : locale})) }}">{{ locale }}</a>
            </li>
    {% endfor %}-->
    <div class="leftdiv">
        <div id="leftPetana">Aparador</div>
        {% if agenda|length >0 %}
	    	{% for agn in agenda %}
                    <div class="elem_main">
	    	        <span class="tit_not">
                         {{ agn.titol|raw}}
                        </span><br>
                       <span class="sub_tit">
			{{ agn.subtitol}}
			</span><br>
                         {% if  agn.attachment!='aaa' %}
                            <img src="{{path}}{{agn.tablePath}}/{{ agn.attachment}}" />   
                         {% endif %}
                         {{ agn.description|raw}}
                            {{ agn.video|raw}}
                         
                    </div>
	    		{% endfor %}
	    		
	    	{% else %}
	    	 <p>- There are no things </p>
	    	{% endif %}
    	</div>
    	<div class="centerdiv">
             <div id="centerPetana">Noticies</div>
    		{% if noticia|length >0 %}
	    		    			
	    		{% for noti in noticia %}
			<div class="elem_main">
	    	        <span class="tit_not">
			{{ noti.titol}}
			</span><br>
			<span class="sub_tit">
			{{ noti.subtitol}}
			</span><br>
                         <div class="imgportada">
			{% if  noti.attachment!='aaa' %}
                            <img src="{{path}}{{ noti.tablePath}}/{{ noti.attachment}}" />   
			{% endif %}
                        </div>
			{{ noti.description|raw}}
			{{ noti.video|raw}}
			
			
			
			</div>
	    		{% endfor %}
	    		
	    	{% else %}
	    	 <p>- There are no things </p>
	    	{% endif %}
    	</div>
	
<div class="rightdi">
    <div id="prePetana">Presentacions</div>	
    	<div class="rightdiv">
            
	
		
    	   {% if paginationPresentacio|length >0 %}
	    		    			
	    		{% for presentacio in paginationPresentacio %}
			<div class="ender">
			
			<div class="farl wit">
                        {% set daynum  = presentacio.dataEntrada|date('l') %}
                        {% set day  = presentacio.dataEntrada|date('j') %}
                        {% set month = presentacio.dataEntrada|date('F') %}
                        {% set year = presentacio.dataEntrada|date('Y') %}
                        {{ '%s'|format( daynum|trans) }} {{ '%s'|format(day) }} {{ '%s %s'|format( month|trans,year) }}
			
			</div>
			<div class="farl">
			{{ presentacio.lloc}}
			</div>
			<div class="farl titolmain">
	    		{{ presentacio.titol}}
			</div>
			<div class="farl">
			{{ presentacio.subtitol}}
			</div>
			<div class="farl des">
			{{ presentacio.description|raw}}
			</div>
                            <div class="imgportada">
			{% if  presentacio.attachment!='aaa' %}
				<img  src="{{path}}presentacio/{{ presentacio.attachment}}" />      
			{% endif %}
                                </div>
			<div class="farl des">
			{{ presentacio.intervindran}}
			</div>
			
			</div>
                        <div class="dasheds"></div>
	    		{% endfor %}
	    		</div>
	</div></div></div>
	    		<div class="pagerfanta" >
	    			{{knp_pagination_render(paginationPresentacio)}}
	    		</div>
	    	{% else %}
	    	 <p>- There are no things </p>
	    	{% endif %}
    	
        {% if app.environment == 'dev' %}
           DEV
        {% endif %}
	
