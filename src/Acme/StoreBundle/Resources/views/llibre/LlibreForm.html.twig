{% extends 'AcmeStoreBundle::layout.html.twig' %}

{% block title %}Llibreria 22@{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

    <h1 class="title">{% trans %}form_llibre{% endtrans %}</h1>
    	<a href="{{ path('acme_store_homepage', {}) }}" >{% trans %}menu_admin{% endtrans %}</a>
    	<a href="{{ path('acme_pre_store_llibre', {}) }}" >{% trans %}new_book{% endtrans %}</a>
    	<a href="{{ path('llistat_store_llibre', {orderBy:'1=1 order by n.id asc'}) }}" >{% trans %}list_book{% endtrans %}</a>
    
    	{{ form_start(form) }} 
    		{{ form_errors(form) }}
    			<div class="form_date"> {{ form_label(form.date,'Data') }} 
    			      {{ form_errors(form.date) }} 
    			      {{ form_widget(form.date, {'attr': {'class': 'form_date'}}) }}
    			</div>
    			<div class="form_date"> {{ form_label(form.attachment,'Foto') }} 
    			      {{ form_errors(form.attachment) }} 
    			      {{ form_widget(form.attachment, {}) }}
    			</div>
    	{{ form_end(form) }}
    	
    	{% if update == 1 %}
    	<script>
    	  document.getElementById("form_attachment").required="";
    	</script>
    	{% endif %}
    	
    	
        {% if app.environment == 'dev' %}
           DEV
        {% endif %}
       
{% endblock %}
