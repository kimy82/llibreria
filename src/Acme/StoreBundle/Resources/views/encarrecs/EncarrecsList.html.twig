{% extends 'AcmeStoreBundle::layout.html.twig' %}

{% block title %}Llibreria 22@{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
	
    <h1 class="title">{% trans %}list_book_page_title{% endtrans %}</h1>
    	<a href="{{ path('acme_store_homepage', {}) }}" >{% trans %}menu_admin{% endtrans %}</a>
    	
    	{% if pagination|length >0 %}
    		<ul>
    			<li>Name: <input type="text" value="" id="name" onblur="search(this.id,this.value)" />&nbsp;
    		{% for encarrec in pagination %}
    			<li>{{ encarrec.name}} {{ encarrec.poblacio}}  {{ encarrec.codi}} {{encarrec.adreca}} {{encarrec.email}} {{encarrec.tel}} {{encarrec.llibre}} <a href="#" onclick="deleteEncarrec({{encarrec.id}})">DELETE</a> <a href="#" onclick="enviaEncarrec({{encarrec.id}})">ENVIAT</a></li> 
    		{% endfor %}
    		</ul>
    		<div class="pagerfanta" >
    			{{knp_pagination_render(pagination)}}
    		</div>
    	{% else %}
    	 <p>- There are no things </p>
    	{% endif %}
    
        {% if app.environment == 'dev' %}
           DEV
        {% endif %}
        
              <script>
				function deleteEncarrec(id){
					var path="{{pathlocal}}";
					
					window.location.href=path+"/admin/secured/encarrec/delete/"+id;
				}
				
				function enviaEncarrec(id){
					var path="{{pathlocal}}";
					
					window.location.href=path+"/admin/secured/encarrec/envia/"+id;
				}							
				
			</script>
       
{% endblock %}
